<Application x:Class="PROG2500_A2_Chinook.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PROG2500_A2_Chinook"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <LinearGradientBrush x:Key="brush" StartPoint="0,1" EndPoint="0,0">
                <GradientStop Color="#FF8FED8F" Offset="0" />
                <!-- Light Green -->
                <GradientStop Color="#FF007C00" Offset="1" />
                <!-- Dark Green -->
            </LinearGradientBrush>
            <Style TargetType="Button">
                <Setter Property="Background" Value="{StaticResource brush}"/>
            </Style>
            <Style TargetType="TextBlock" x:Key="FrameTextBlocks">
                <Setter Property="Background" Value="{StaticResource brush}"></Setter>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
